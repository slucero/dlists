<article>
  <span class="handle">[drag]</span>
  <span><%= item.description %></span>
  <footer>
    <ul class="actions content-actions">
      <li><%= link_to 'Edit', edit_list_item_path(item.list, item) %></li>
      <li><%= link_to 'Destroy', list_item_path(item.list, item), :method => :delete, :confirm => 'Are you sure?' %></li>
    </ul>
  </footer>
</article>
